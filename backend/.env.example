 

# --- Server ---
PORT=5000
NODE_ENV=development

# --- MongoDB Atlas ---
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/ciphersqlstudio?retryWrites=true&w=majority

# --- PostgreSQL Sandbox ---
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=ciphersqlstudio_sandbox
PG_USER=sandbox_readonly
PG_PASSWORD=your_sandbox_password

 JWT_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# --- LLM API (OpenAI) ---
OPENAI_API_KEY=sk- your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# --- CORS ---
CLIENT_ORIGIN=http://localhost:5173

# --- Rate Limiting ---
HINT_RATE_LIMIT_PER_HOUR=5
QUERY_RATE_LIMIT_WINDOW_MS=60000
QUERY_RATE_LIMIT_MAX=30
